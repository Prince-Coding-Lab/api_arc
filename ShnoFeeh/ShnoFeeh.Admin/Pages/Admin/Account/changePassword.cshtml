@page
@model ShnoFeeh.Admin.Pages.Account.changePasswordModel
@{
    ViewData["Title"] = "Update Password";
    Layout = "~/Pages/Admin/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="float-left">Update Password</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="/Admin/Dashboard">Home</a></li>
                        <li class="breadcrumb-item"><a asp-page="/Admin/Account/profile">Profile</a></li>
                        <li class="breadcrumb-item active">Update Password</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 mt-2">
                    <!-- Profile Image -->
                    <div class="card">
                        <div class="card-body table-responsive">
                            @if (!String.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <p id="ErrorMessage" class="" style="color:red;">@Model.ErrorMessage</p>
                            }
                            @if (!String.IsNullOrEmpty(Model.SuccessMessage))
                            {
                                <p id="SuccessMessage" class="" style="color:darkgreen;">@Model.SuccessMessage</p>
                            }
                            <form role="form" method="post">
                                <div class="row">
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label>Old Password</label>
                                            <input type="password" asp-for="@Model.userPasswordDto.CurrentPassword" class="form-control" placeholder="Password" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label>New Password</label>
                                            <input type="password" asp-for="@Model.userPasswordDto.NewPassword" class="form-control" placeholder="Password" required>
                                        </div>
                                    </div>
                                    <div class="col-4 offset-md-1">
                                        <div class="form-group">
                                            <label>Confirm New Password</label>
                                            <input type="Password" asp-for="@Model.userPasswordDto.ConfirmPassword" class="form-control" placeholder="Password" required>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" asp-page-handler="ChangePassword" class="btn btn-primary mt-4">Update Password</button>
                            </form>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>